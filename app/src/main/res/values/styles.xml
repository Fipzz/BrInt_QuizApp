<resources>

    <!-- Base application theme. -->

    <style name="baseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="primaryButtonTheme">
            @style/Widget.AppCompat.Button
        </item>

    </style>

    <style name="Theme.App.Blue" parent="baseTheme">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="background">@color/blueBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/bluePrimary_text</item>
        <item name="buttonTextColor">@color/blueButtonText</item>
        <item name="buttonNormalColor">@color/blueButtonNormal</item>
        <item name="questionTextColor">@color/buttonblue</item>



    </style>

   <style name="Theme.App.Purple" parent="baseTheme">

       <!-- Customize your theme here. -->
       <item name="colorPrimary">@color/colorPrimaryDark</item>
       <item name="background">@color/purpleBackground</item>
       <item name="colorAccent">@color/colorAccent</item>
       <item name="primaryTextColor">@color/purplePrimaryText</item>
       <item name="buttonTextColor">@color/purpleButtonText</item>
       <item name="buttonNormalColor">@color/purpleButtonNormal</item>
       <item name="questionTextColor">@color/purpleQuestionColor</item>


   </style>



    <!-- Titel -->

    <style name="name">

        <item name="android:textSize">
            46sp
        </item>

        <item name="android:textColor">
            @color/blueButtonText
        </item>

    </style>

    <style name="question">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:textColor">
            @color/blueButtonText
        </item>

        <item name="android:shadowColor">
            #40000000
        </item>

        <item name="android:shadowDx">
            0
        </item>

        <item name="android:shadowDy">
            4
        </item>

        <item name="android:shadowRadius">
            4
        </item>

    </style>

</resources>