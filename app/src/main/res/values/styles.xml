<resources>

    <!-- Base application theme. -->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="blueBackgroundColor">@color/blueBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="blueTextColor">@color/bluePrimary_text</item>
        <item name="blueButtonTextColor">@color/blueButtonText</item>
        <item name="colorButtonNormal">@color/blueButtonNormal</item>
        <item name="blueQuestionTextColor">@color/blueQuestionColor</item>



    </style>

   <style name="PurpleTheme" parent="Theme.AppCompat.Light.NoActionBar">

       <!-- Customize your theme here. -->
       <item name="colorPrimary">@color/colorPrimary</item>
       <item name="purpleBackgroundColor">@color/purpleBackground</item>
       <item name="colorAccent">@color/colorAccent</item>
       <item name="purpleTextColor">@color/purplePrimaryText</item>
       <item name="purpleButtonTextColor">@color/purpleButtonText</item>
       <item name="colorButtonNormal">@color/purpleButtonNormal</item>
       <item name="purpleQuestionTextColor">@color/purpleQuestionColor</item>


   </style>



    <!-- Titel -->

    <style name="name">

        <item name="android:textSize">
            46sp
        </item>

        <item name="android:textColor">
            @color/bluePrimary_text
        </item>

    </style>

    <style name="question">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:textColor">
            @color/blueButtonText
        </item>

        <item name="android:shadowColor">
            #40000000
        </item>

        <item name="android:shadowDx">
            0
        </item>

        <item name="android:shadowDy">
            4
        </item>

        <item name="android:shadowRadius">
            4
        </item>

    </style>

</resources>