<resources>

    <!-- Base application theme. -->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/buttonText</item>
        <item name="colorButtonNormal">@color/buttonNormal</item>


    </style>

    <!-- Titel -->

    <style name="name">

        <item name="android:textSize">
            46sp
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>

    <style name="question">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:textColor">
            #8DB8DB
        </item>

        <item name="android:shadowColor">
            #40000000
        </item>

        <item name="android:shadowDx">
            0
        </item>

        <item name="android:shadowDy">
            4
        </item>

        <item name="android:shadowRadius">
            4
        </item>

    </style>

</resources>