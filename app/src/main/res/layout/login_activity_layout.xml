<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_log"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DCDCDC">


    <!-- Titel -->
    <TextView
        android:id="@+id/name"
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:fontFamily="@font/quicksand_light"
        android:gravity="top"
        android:text="@string/name"
        android:textAppearance="@style/name"
        android:textSize="47sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <!-- Password background -->
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:alpha="0.25"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/log_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle" />


    <!-- Username background -->
    <View
        android:id="@+id/rectangle"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:alpha="0.25"
        android:background="@color/black"
        android:contextClickable="false"
        android:duplicateParentState="false"
        app:layout_constraintBottom_toTopOf="@+id/log_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <!-- Username input -->
    <EditText
        android:id="@+id/brugernavn"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@color/white"
        android:gravity="left"
        android:hint="Brugernavn:"

        android:textAppearance="@style/name"
        android:textColor="@color/white"
        android:textColorHint="@color/secondary_text"
        android:textColorLink="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle" />

    <!-- Password input -->


    <!-- Log in button -->

    <EditText
        android:id="@+id/password"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="left"
        android:hint="Password:"
        android:textAppearance="@style/name"
        android:textColor="@color/white"
        android:textColorHint="@color/secondary_text"
        android:textColorLink="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_2"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_2"
        app:layout_constraintStart_toStartOf="@+id/rectangle_2"
        app:layout_constraintTop_toTopOf="@+id/rectangle_2" />

    <Button
        android:id="@+id/log_in"
        android:layout_width="95dp"
        android:layout_height="43dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Log ind"
        android:textColor="#243665"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <!-- Annonym knap -->
    <Button
        android:id="@+id/anon"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:text="Annonym"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in"
        app:layout_constraintVertical_bias="0.32" />


</androidx.constraintlayout.widget.ConstraintLayout>