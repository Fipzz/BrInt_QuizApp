<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_log"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DCDCDC">


    <!-- Titel -->
    <TextView
        android:id="@+id/name"
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="@font/quicksand_light"
        android:gravity="top"
        android:text="@string/name"
        android:textAppearance="@style/name"
        android:textSize="47sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Password background -->
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="450dp"
        android:alpha="0.25"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Username background -->
    <View
        android:id="@+id/rectangle"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="400dp"
        android:alpha="0.25"
        android:background="@color/black"
        android:contextClickable="false"
        android:duplicateParentState="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Username input -->
    <EditText
        android:id="@+id/brugernavn"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="404dp"
        android:background="@null"
        android:backgroundTint="@color/white"
        android:gravity="left"
        android:hint="Brugernavn:"
        android:textAppearance="@style/name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Password input -->
    <EditText
        android:id="@+id/password"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="454dp"
        android:background="@null"
        android:gravity="left"
        android:hint="Password:"
        android:textAppearance="@style/name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Log in button -->
    <Button
        android:id="@+id/log_in"
        android:layout_width="95dp"
        android:layout_height="43dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="504dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Log ind"
        android:textColor="#243665"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Annonym knap -->
    <Button
        android:id="@+id/anon"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:text="Annonym"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in"
        app:layout_constraintVertical_bias="0.32" />



</androidx.constraintlayout.widget.ConstraintLayout>