<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_log"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#243665">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Quiz navn -->

            <TextView
                android:id="@+id/quizzer"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/quicksand_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Quizzer"
                android:textAppearance="@style/name"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/quiz1"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button One"
                android:textColor="#243665"
                android:textSize="20sp" />

            <Button
                android:id="@+id/quiz2"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button Two"
                android:textColor="#243665"
                android:textSize="20sp" />

            <Button
                android:id="@+id/quiz3"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button Three"
                android:textColor="#243665"
                android:textSize="20sp" />

            <Button
                android:id="@+id/quiz4"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button Four"
                android:textColor="#243665"
                android:textSize="20dp" />

            <Button
                android:id="@+id/quiz5"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button Five"
                android:textColor="#243665"
                android:textSize="20sp" />

            <Button
                android:id="@+id/quiz6"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button Six"
                android:textColor="#243665"
                android:textSize="20sp" />

            <Button
                android:id="@+id/quiz7"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button Seven"
                android:textColor="#243665"
                android:textSize="20sp" />

            <Button
                android:id="@+id/quiz8"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button Eight"
                android:textColor="#243665"
                android:textSize="20sp" />

            <Button
                android:id="@+id/quiz9"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/log_in"
                android:backgroundTint="@color/buttonblue"
                android:text="Button Nine"
                android:textColor="#243665"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
