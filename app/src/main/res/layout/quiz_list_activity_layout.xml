<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_log"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#243665">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quizzer"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:fontFamily="@font/quicksand_light"
            android:gravity="center_horizontal|center_vertical"
            android:text="Mine quizzer"
            android:textAppearance="@style/name"
            android:textColor="@color/buttonblue"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ListView
            android:id="@+id/quiz_listView"
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:cacheColorHint="#00632424">

        </ListView>

        <LinearLayout
            android:id="@+id/ll_addQuiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addQuiz"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                app:srcCompat="@android:drawable/ic_menu_add" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
