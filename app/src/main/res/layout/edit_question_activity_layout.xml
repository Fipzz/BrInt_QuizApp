<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_log"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#243665">

    <!-- Quiz navn -->
    <TextView
        android:id="@+id/quiz_navn"
        android:layout_width="267dp"
        android:layout_height="71dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/quiz_navn"
        android:textAppearance="@style/name"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Question -->
    <TextView
        android:id="@+id/question"
        android:layout_width="292dp"
        android:layout_height="136dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/question"
        android:textAppearance="@style/question"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_navn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/answer1"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Svar 1"
        android:textColor="#243665"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Svar 2"
        android:textColor="#243665"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constrintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Svar 3"
        android:textColor="#243665"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer2"
        app:layout_constraintVertical_bias="0.13"
        app:layout_constrintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/answer4"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Svar 4"
        android:textColor="#243665"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer3"
        app:layout_constraintVertical_bias="0.23000002" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/previous"
        android:text="Forrige"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer4"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/next"
        android:text="NÃ¦ste"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer4"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/edit1"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/question"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <ImageButton
        android:id="@+id/edit2"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/answer1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <ImageButton
        android:id="@+id/edit3"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/answer2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

    <ImageButton
        android:id="@+id/edit4"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toEndOf="@+id/answer3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688" />

    <ImageButton
        android:id="@+id/edit5"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toEndOf="@+id/answer4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

</androidx.constraintlayout.widget.ConstraintLayout>