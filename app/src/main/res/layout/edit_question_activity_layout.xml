<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_log"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#243665">

    <!-- Quiz navn -->
    <TextView
        android:id="@+id/quiz_navn"
        android:layout_width="267dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/quiz_navn"
        android:textAppearance="@style/name"
        android:textColor="@color/buttonblue"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Quiz_logic_activity -->
    <EditText
        android:id="@+id/question"
        android:layout_width="292dp"
        android:layout_height="136dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/question"
        android:textAppearance="@style/question"
        android:textColor="@color/buttonblue"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_navn"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/answer1"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:gravity="center"
        android:text="Svar 1"
        android:textColor="#243665"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:layout_constraintVertical_bias="0.096" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Svar 2"
        android:textColor="#243665"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Svar 3"
        android:textColor="#243665"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer2"
        app:layout_constraintVertical_bias="0.131" />

    <EditText
        android:id="@+id/answer4"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Svar 4"
        android:textColor="#243665"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer3"
        app:layout_constraintVertical_bias="0.229" />

    <Button
        android:id="@+id/previous"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Forrige"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer4"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="NÃ¦ste"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer4"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/edit1"
        android:layout_width="58dp"
        android:layout_height="0dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="69dp"
        android:backgroundTint="?attr/background"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toTopOf="@+id/edit2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/question"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/edit2"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:backgroundTint="?attr/background"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer1"
        app:layout_constraintTop_toTopOf="@+id/answer1" />

    <ImageButton
        android:id="@+id/edit3"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:backgroundTint="?attr/background"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer2"
        app:layout_constraintTop_toTopOf="@+id/answer2" />

    <ImageButton
        android:id="@+id/edit4"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:backgroundTint="?attr/background"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer3"
        app:layout_constraintTop_toTopOf="@+id/answer3" />

    <ImageButton
        android:id="@+id/edit5"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:backgroundTint="?attr/background"
        android:scaleType="centerCrop"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer4"
        app:layout_constraintTop_toTopOf="@+id/answer4" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="37dp"
        android:onClick="onCheckBox"
        app:layout_constraintBottom_toTopOf="@+id/checkBox2"
        app:layout_constraintEnd_toStartOf="@+id/edit2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_navn" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="30dp"
        android:onClick="onCheckBox"
        app:layout_constraintBottom_toTopOf="@+id/checkBox3"
        app:layout_constraintEnd_toStartOf="@+id/edit3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="103dp"
        android:onClick="onCheckBox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="34dp"
        android:onClick="onCheckBox"
        app:layout_constraintBottom_toTopOf="@+id/checkBox4"
        app:layout_constraintEnd_toStartOf="@+id/edit4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

    <TextView
        android:id="@+id/questionCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="12dp"
        android:text="1/1"
        android:textColor="@color/buttonblue"
        app:layout_constraintBottom_toTopOf="@+id/answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#00853131"
        android:outlineSpotShadowColor="#002B2B2B"
        app:layout_constraintBottom_toTopOf="@+id/question"
        app:layout_constraintEnd_toStartOf="@+id/quiz_navn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:backgroundTint="#00853131"
        android:outlineSpotShadowColor="#002B2B2B"
        app:layout_constraintBottom_toTopOf="@+id/question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quiz_navn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>