<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_log"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#243665">

    <!-- Quiz navn -->

    <TextView
        android:id="@+id/quiz_navn"
        android:layout_width="267dp"
        android:layout_height="71dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/quiz_navn"
        android:textAppearance="@style/name"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/quizCode"
        android:layout_width="184dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center_horizontal|center_vertical"
        android:text="Quiz kode: "
        android:textAppearance="@style/name"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_navn"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/codeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_code"
        android:textSize="20sp"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizCode"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/changeName"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Skift Navn"
        android:textColor="#243665"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizCode"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/editQuestion"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Rediger Spørgsmål"
        android:textColor="#243665"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeName"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/addQuestion"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:backgroundTint="@color/buttonblue"
        android:text="Tilføj Spørgsmål"
        android:textColor="#243665"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editQuestion"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>